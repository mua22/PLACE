package epclaim.compiler;

import java.util.ArrayList;

/**
 * @author Usman
 * Creates a Tree Like Structure for nested Conditions. 
 *
 */
public class Condition {
	
	/*
	 * type 
	 * o for none
	 * 1 for and
	 * 2 for or
	 */
	private int type;
	private ArrayList<Condition> childTypes;
	private ArrayList<FunctionSignature> condition;
	public Condition() {
		super();
		this.type = 0;
		this.childTypes = new ArrayList<Condition>();
		this.condition = new ArrayList<FunctionSignature>();
	}
	
	
}
